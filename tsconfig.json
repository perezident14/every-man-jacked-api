{
  "compilerOptions": {
    "target": "es2016",
    // "lib": [],
    "types": ["node"],
    "module": "commonjs",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/app.ts", "src/*.d.ts"],
  "exclude": ["node_modules"]
}
